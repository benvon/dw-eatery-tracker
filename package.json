{
  "name": "dw-eatery-tracker",
  "version": "0.1.0",
  "description": "DisneyWorld Eatery Tracker - Discover and track visits to eateries at Walt Disney World",
  "main": "server.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:ci": "jest --ci --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "analyze": "ANALYZE=true next build",
    "deploy:staging": "wrangler pages publish .next --project-name=dw-eatery-tracker --branch=staging",
    "deploy:production": "wrangler pages publish .next --project-name=dw-eatery-tracker --branch=main"
  },
  "dependencies": {
    "next": "^15.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.8",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "eslint": "^9.21.0",
    "eslint-config-next": "^14.0.0",
    "typescript": "^5.8.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.6",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
} 